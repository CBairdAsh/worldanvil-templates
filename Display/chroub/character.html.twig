{% extends 'RPGSRDBundle:Templates:base.html.twig' %}
{% block body %}
{% macro attrModifier(score) %}
    {% if score is defined %}
        {% set mod = (score - 10)//2 %}
        {% if mod >= 0 %}
            [roll:1d20+{{ mod }}|+{{ mod }}]
        {% else %}  
            [roll:1d20{{ mod }}|{{ mod }}]
        {% endif %}                 
     {% endif %}   
{% endmacro %}
{% macro directModifier(mod) %}
    {% if mod is defined %}
        {% if mod >= 0 %}
            [roll:1d20+{{ mod }}|+{{ mod }}]
        {% else %}  
            [roll:1d20{{ mod }}|{{ mod }}]
        {% endif %}                 
     {% endif %}   
{% endmacro %}
