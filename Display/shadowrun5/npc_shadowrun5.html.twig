{% extends 'RPGSRDBundle:Templates:base.html.twig' %}
{% block body %}
<table>
{# Title, showing name/gender/metatype #}
<caption class="title">{{ variables.name|BBcode }}, {{ variables.gender|BBcode }} {{ variables.metatype|BBcode }}</caption>

{# Header row for the core attributes #}
<tr class="attribute_header">
    <td>B</td>
    <td>A</td>
    <td>R</td>
    <td>S</td>
    <td>W</td>
    <td>L</td>
    <td>I</td>
    <td>C</td>
    <td>ESS</td>
    <td>EDG</td>
    {% if variables.is_magic_user or variables.has_powers %}<td>M</td>{% endif %}
    {% if variables.is_technomancer %}<td>RES</td>{% endif %}
    {% if variables.is_ai %}<td>D</td>{% endif %}
</tr>

{# Attribute row #}
<tr class="attributes">
    <td>{{ variables.body }}</td>
    <td>{{ variables.agility }}</td>
    <td>{{ variables.reaction }}</td>
    <td>{{ variables.strength }}</td>
    <td>{{ variables.willpower }}</td>
    <td>{{ variables.logic }}</td>
    <td>{{ variables.intuition }}</td>
    <td>{{ variables.charisma }}</td>
    <td>{{ variables.essence/100 }}</td>
    <td>{{ variables.edge }}</td>
    {% if variables.is_magic_user or variables.has_powers %}<td>{{ variables.magic }}</td>{% endif %}
    {% if variables.is_technomancer %}<td>{{ variables.resonance }}</td>{% endif %}
    {% if variables.is_ai %}<td>{{ variables.depth }}</td>{% endif %}
</tr>

{# Main statblock, rows should be hidden if the relevant options are checked. #}
<tr>
    <td colspan="3" class="table_header_left">Condition Monitor</td>
    <td colspan="8">{{ variables.condition|BBcode }}</td>
</tr>
{% if variables.is_decker or variables.is_technomancer or variables.is_ai %}
<tr id="condition_matrix">
    <td colspan="3" class="table_header_left">Matrix Condition Monitor</td>
    <td colspan="8">{{ variables.condition_matrix|BBcode }}</td>
</tr>
{% endif %}

<tr>
    <td colspan="3" class="table_header_left">Physical Initiative</td>
    <td colspan="8">{{ variables.initiative_physical|BBcode }}</td>
</tr>
{% if variables.is_magic_user %}
<tr>
    <td colspan="3" class="table_header_left">Astral Initiative</td>
    <td colspan="8">{{ variables.initiative_astral|BBcode }}</td>
</tr>
{% endif %}
{% if variables.is_decker or variables.is_technomancer or variables.is_ai %}
<tr>
    <td colspan="3" class="table_header_left">Matrix Initiative</td>
    <td colspan="8">{{ variables.initiative_matrix|BBcode }}</td>
</tr>
{% endif %}

<tr>
    <td colspan="3" class="table_header_left">Limits</td>
    <td colspan="8">{{ variables.limits|BBcode }}</td>
</tr>
<tr>
    <td colspan="3" class="table_header_left">Active Skills</td>
    <td colspan="8">{{ variables.skills_active|BBcode }}</td>
</tr>
<tr>
    <td colspan="3" class="table_header_left">Knowledge Skills</td>
    <td colspan="8">{{ variables.skills_knowledge|BBcode }}</td>
</tr>
<tr>
    <td colspan="3" class="table_header_left">qualities</td>
    <td colspan="8">{{ variables.qualities|BBcode }}</td>
</tr>

{% if variables.is_magic_user %}
<tr>
    <td colspan="3" class="table_header_left">Initiate Grade</td>
    <td colspan="8">{{ variables.initiate }}</td>
</tr>
<tr>
    <td colspan="3" class="table_header_left">Spells</td>
    <td colspan="8">{{ variables.spells|BBcode }}</td>
</tr>
{% endif %}
{% if variables.has_powers %}
<tr>
    <td colspan="3" class="table_header_left">Powers</td>
    <td colspan="8">{{ variables.powers|BBcode }}</td>
</tr>
{% endif %}

{% if variables.is_rigger %}
<tr>
    <td colspan="3" class="table_header_left">Vehicles and Drones</td>
    <td colspan="8">{{ variables.vehicles|BBcode }}</td>
</tr>
{% endif %}
<tr>
    <td colspan="3" class="table_header_left">Gear</td>
    <td colspan="8">{{ variables.gear|BBcode }}</td>
</tr>
{% if variables.is_cybered %}
<tr>
    <td colspan="3" class="table_header_left">Cyberware</td>
    <td colspan="8">{{ variables.cyberware|BBcode }}</td>
</tr>
{% endif %}
<tr>
    <td colspan="3" class="table_header_left">Weapons</td>
    <td colspan="8">{{ variables.weapons|BBcode }}</td>
</tr>
</table>
{% endblock %}