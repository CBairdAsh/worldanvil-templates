{% import _self as sheet %}
{# ------------------------- #}
{% macro genCreature(id, name, agi, awa, bra, coo, int, per, wil, details) %}
<tr><th class="att">Name</th><th class="att" colspan="6" title="Name of the creature"><input value="{{ name }}" class="form-control" id="name" name="name" placeholder="" type="text" /></th></tr>
<tr><th class="hdr c" title="Awareness">Awa</th>
    <th class="hdr c" title="Intelligence">Int</th>
    <th class="hdr c" title="Personality">Per</th>
    <th class="hdr c" title="Willpower">Will</th>
    <th class="hdr c" title="Agility">Agi</th>
    <th class="hdr c" title="Brawn">Brw</th>
    <th class="hdr c" title="Coordination">Coo</th></tr>
<tr><td class="txt c" title=""><input value="{{ awa }}" class="form-control" id="creature_awareness_{{id}}" name="creature_awareness_{{id}}" placeholder="" type="number" /></td>
    <td class="txt c" title=""><input value="{{ int }}" class="form-control" id="creature_intelligence_{{id}}" name="creature_intelligence_{{id}}" placeholder="" type="number" /></td>
    <td class="txt c" title=""><input value="{{ per }}" class="form-control" id="creature_personality_{{id}}" name="creature_personality_{{id}}" placeholder="" type="number" /></td>
    <td class="txt c" title=""><input value="{{ wil }}" class="form-control" id="creature_willpower_{{id}}" name="creature_willpower_{{id}}" placeholder="" type="number" /></td>
    <td class="txt c" title=""><input value="{{ agi }}" class="form-control" id="creature_agility_{{id}}" name="creature_agility_{{id}}" placeholder="" type="number" /></td>
    <td class="txt c" title=""><input value="{{ bra }}" class="form-control" id="creature_brawn_{{id}}" name="creature_brawn_{{id}}" placeholder="" type="number" /></td>
    <td class="txt c" title=""><input value="{{ coo }}" class="form-control" id="creature_coordination_{{id}}" name="creature_coordination_{{id}}" placeholder="" type="number" /></td></tr>
<tr><td class="hdr c" colspan=7>Details</td></tr>
<tr><td class="txt l" colspan=7><textarea class="form-control" id="details" name="details" rows="5" placeholder="">{{ details }}</textarea></td></tr>{% endmacro genCreature %}
{# ------------------------- #}
<div class="container-fluid conan-sheet">
    <table width="100%">
        {{ sheet.genCreature( "01", variables.name, variables.creature_agility_01, variables.creature_awareness_01, variables.creature_brawn_01, variables.creature_coordination_01, variables.creature_intelligence_01, variables.creature_personality_01, variables.creature_willpower_01, variables.details ) }}
        <tr><td class="hdr c" colspan=7>Fields of Experience</td></tr>
        <tr>
            <th class="hdr c" colspan=2>Combat</th><td class="txt c"><input value="{{ variables.combat is defined ? variables.combat }}" class="form-control" id="combat" name="combat" placeholder="" type="number" /></td><td rowspan=3>&nbsp;</td>
            <th class="hdr c" colspan=2 >Movement</th><td class="txt c"><input value="{{ variables.movement is defined ? variables.movement }}" class="form-control" id="movement" name="movement" placeholder="" type="number" /></td>
        </tr>
        <tr>
            <th class="hdr c" colspan=2 >Fortitude</th><td class="txt c"><input value="{{ variables.fortitude is defined ? variables.fortitude }}" class="form-control" id="fortitude" name="fortitude" placeholder="" type="number" /></td>
            <th class="hdr c" colspan=2 >Senses</th><td class="txt c"><input value="{{ variables.senses is defined ? variables.senses }}" class="form-control" id="senses" name="senses" placeholder="" type="number" /></td>
        </tr>
        <tr>
            <th class="hdr c" colspan=2 >Knowledge</th><td class="txt c"><input value="{{ variables.knowledge is defined ? variables.knowledge }}" class="form-control" id="knowledge" name="knowledge" placeholder="" type="number" /></td>
            <th class="hdr c" colspan=2 >Social</th><td class="txt c"><input value="{{ variables.social is defined ? variables.social }}" class="form-control" id="social" name="social" placeholder="" type="number" /></td>
        </tr>
        <tr><td class="hdr c" colspan=7>Stress and Soak</td></tr>
        <tr><td class="txt l" colspan=7><textarea class="form-control" id="stress_and_soak" name="stress_and_soak" rows="5" placeholder="">{{ variables.stress_and_soak is defined ? variables.stress_and_soak }}</textarea></td></tr>
        <tr><td class="hdr c" colspan=7>Attacks</td></tr>
        <tr><td class="txt l" colspan=7><textarea class="form-control" id="attacks" name="attacks" rows="5" placeholder="">{{ variables.attacks is defined ? variables.attacks }}</textarea></td></tr>
        <tr><td class="hdr c" colspan=7>Special Abilities</td></tr>
        <tr><td class="txt l" colspan=7><textarea class="form-control" id="special_abilities" name="special_abilities" rows="5" placeholder="">{{ variables.special_abilities is defined ? variables.special_abilities }}</textarea></td></tr>
    </table>
</div>