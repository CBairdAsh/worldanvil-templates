<div class="container-fluid uesrpg-sheet">
    <div class="row">
        <div class="col-12 col-md-12 col-lg-6">
            <div class="card my-2 of">
                <div class="card-header head-bar"><em class="fas fa-address-card"></em> {{variables.name}}<button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseBackground" aria-expanded="true" aria-controls="collapseBackground"><em class="fas fa-angle-down"></em></button></div>
                <div class="card-body collapse show od pd10" id="collapseBackground" aria-labelledby="headingBackground">
                    {% if variables.desc is defined %}{{variables.desc}}{% endif %}<br>
                    {% if variables.armor is defined %}Armor Rating: {{ variables.armor }}{% endif %}<br>
                    <table width="100%">
    {% set SB = variables.strength[:1] %}
    {% set EB = variables.endurance[:1] %}
    {% set AB = variables.agility[:1] %}
    {% set IB = variables.intelligence[:1] %}
    {% set WB = variables.willpower[:1] %}
    {% set PcB = variables.perception[:1] %}
    {% set PsB = variables.personality[:1] %}
    {% set LkB = variables.luck[:1] %}
    {% set luck_max = LkB %}
    {% set hp_max = (variables.endurance + 1) // 2 %}
    {% set hp_curr = hp_max %}
    {% if variables.hp_curr is defined and variables.hp_curr > 0 %}{% set hp_curr = variables.hp_curr %}{% endif %}
    {% set magicka_max = variables.intelligence  %}
    {% set magicka_curr = magicka_max  %}
    {% if variables.magicka_curr is defined and variables.magicka_curr > 0 %}{% set magicka_curr = variables.magicka_curr %}{% endif %}
    {% set stamina_max = EB  %}
    {% set stamina_curr = stamina_max  %}
    {% if variables.stamina_curr is defined and variables.stamina_curr > 0 %}{% set stamina_curr = variables.stamina_curr %}{% endif %}
    {% set action_max = 3 %}
    {% if AB + IB + PcB > 16 %}{% set action_max = 4 %}{% endif %}
    {% set action_curr = action_max %}
    {% if variables.action_curr is defined and variables.action_curr > 0 %}{% set action_curr = variables.action_curr %}{% endif %}
    {% set wound_threshold = EB + SB + WpB %}
    {% if variables.wound_threshold is defined and variables.wound_threshold > 0 %}{% set wound_threshold = variables.wound_threshold %}{% endif %}
    {% set init_rating = AB + IB + PcB %}
    {% if variables.init_rating is defined and variables.init_rating > 0 %}{% set init_rating = variables.init_rating %}{% endif %}
    {% set speed = SB + 2 * AB %}
    {% if variables.speed is defined and variables.speed > 0 %}{% set speed = variables.speed %}{% endif %}
                        <tr>
                            <th colspan=2 class="hdr c lg" width="35%">Characteristic</th><th colspan=2 class="hdr c" width="45%">Attributes</th><th colspan=2 class="hdr c" width="20%">Skills</th>
                        </tr>
                        <tr>
                            <td class="hdr l">Strength</td><td class="txt c od">{% if variables.strength is defined %} {{ variables.strength }}{% endif %}</td>
                            <td class="hdr l" title="Health Points / Max"><em class="fas fa-heartbeat"></em> Health Points</td><td class="txt c od" title="">{{hp_curr}}</td>
                            <td class="hdr l">Combat</td><td class="txt c od">{% if variables.sk_combat is defined %} {{ variables.sk_combat }}{% endif %}</td>
                        </tr>
                        <tr>
                            <td class="hdr l">Endurance</td><td class="txt c od">{% if variables.endurance is defined %} {{ variables.endurance }}{% endif %}</td>
                            <td class="hdr l" title="Wound Threshold"><em class="ra ra-player-pain"></em> Wound Thresh.</td><td class="txt c od" title="">{{wound_threshold}}</td>
                            <td class="hdr l">Magic</td><td class="txt c od">{% if variables.sk_magic is defined %} {{ variables.sk_magic }}{% endif %}</td>
                        </tr>
                        <tr>
                            <td class="hdr l">Agility</td><td class="txt c od">{% if variables.agility is defined %} {{ variables.agility }}{% endif %}</td>
                            <td class="hdr l" title="Magicka Points / Max"><em class="fas fa-atom"></em> Magicka Points</td><td class="txt c od" title="">{{magicka_curr}}</td>
                            <td class="hdr l">Evade</td><td class="txt c od">{% if variables.sk_evade is defined %} {{ variables.sk_evade }}{% endif %}</td>
                        </tr>
                        <tr>
                            <td class="hdr l">Intelligence</td><td class="txt c od">{% if variables.intelligence is defined %} {{ variables.intelligence }}{% endif %}</td>
                            <td class="hdr l" title="Stamina Points / Max"><em class="ra ra-muscle-up"></em> Stamina Points</td><td class="txt c od" title="">{{stamina_curr}}</td>
                            <td class="hdr l">Observe</td><td class="txt c od">{% if variables.sk_observe is defined %} {{ variables.sk_observe }}{% endif %}</td>
                        </tr>
                        <tr>
                            <td class="hdr l">Willpower</td><td class="txt c od">{% if variables.willpower is defined %} {{ variables.willpower }}{% endif %}</td>
                            <td class="hdr l" title="Init Rating"><em class="fas fa-angle-double-right"></em> Init Rating</td><td class="txt c od" title="">{{init_rating}}</td>
                            <td class="hdr l">Stealth</td><td class="txt c od">{% if variables.sk_stealth is defined %} {{ variables.sk_stealth }}{% endif %}</td>
                        </tr>
                        <tr>
                            <td class="hdr l">Perception</td><td class="txt c od">{% if variables.perception is defined %} {{ variables.perception }}{% endif %}</td>
                            <td class="hdr l" title="Action Points / Max"><em class="fas fa-angle-right"></em> Action Points</td><td class="txt c od" title="">{{action_curr}}</td>
                            <td class="hdr l">Knowledge</td><td class="txt c od">{% if variables.sk_knowledge is defined %} {{ variables.sk_knowledge }}{% endif %}</td>
                        </tr>
                        <tr>
                            <td class="hdr l">Personality</td><td class="txt c od">{% if variables.personality is defined %} {{ variables.personality }}{% endif %}</td>
                            <td class="hdr l" title="Speed"><em class="fas fa-running"></em> Speed</td><td class="txt c od" title="">{{speed}}</td>
                            <td class="hdr l">Social</td><td class="txt c od">{% if variables.sk_social is defined %} {{ variables.sk_social }}{% endif %}</td>
                        </tr>
                        <tr>
                            <td class="hdr l" title="Luck Points / Max"><em class="ra ra-clover"></em> Luck Points</td><td class="txt c od" title="">{% if variables.luck_curr is defined and variables.luck_curr != "" %}{{variables.luck_curr}}{% else %}{{luck_max}}{% endif %}</td>
                            <td class="hdr l" title="Size"><em class="fas fa-arrows-v"></em> Size</td><td class="txt c od">{% if variables.size is defined %}{{variables.size}}{% endif %}</td>
                            <td class="hdr l">Physical</td><td class="txt c od">{% if variables.sk_physical is defined %} {{ variables.sk_physical }}{% endif %}</td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="card my-2 of">
                <div class="card-header head-bar"><em class="fas fa-backpack"></em> Equipment <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseEquipment" aria-expanded="true" aria-controls="collapseEquipment"><em class="fas fa-angle-down"></em></button></div>
                <div class="card-body collapse show od pd10" id="collapseEquipment" aria-labelledby="headingEquipment">
                    {{ variables.equipment is defined ? variables.equipment|nl2br }}
                </div>
            </div>
            <div class="card my-2 of">
                <div class="card-header head-bar"><em class="fas fa-code-branch"></em> Abilities <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseAbilities" aria-expanded="true" aria-controls="collapseAbilities"><em class="fas fa-angle-down"></em></button></div>
                <div class="card-body collapse show od pd10" id="collapseAbilities" aria-labelledby="headingAbilities">
                    {{ variables.abilities is defined ? variables.abilities|nl2br }}
                </div>
            </div>
            <div class="card my-2 of">
                <div class="card-header head-bar"><em class="ra ra-player-teleport"></em> Talents / Traits <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTalents" aria-expanded="true" aria-controls="collapseTalents"><em class="fas fa-angle-down"></em></button></div>
                <div class="card-body collapse show od pd10" id="collapseTalents" aria-labelledby="headingTalents">
                    {{ variables.talents is defined ? variables.talents|nl2br }}
                </div>
            </div>
            {% set img = '' %}
            {% if variables.image is defined and variables.image != '' %}{% set img = variables.image %}{% endif %}
            {% if img != '' %}
            <div class="card my-2 of">
                <div class="card-header head-bar"><em class="fas fa-address-card"></em> Image <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseImage" aria-expanded="true" aria-controls="collapseImage"><em class="fas fa-angle-down"></em></button></div>
                <div class="card-body collapse show od pd10" id="collapseImage" aria-labelledby="headingImage">
                [img:{{img}}]
                </div>
            </div>
            {% endif %}
            <div class="card my-2 of">
                <div class="card-header head-bar"><em class="fas fa-file-alt"></em> Notes <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseNotes" aria-expanded="true" aria-controls="collapseNotes"><em class="fas fa-angle-down"></em></button></div>
                <div class="card-body collapse show od pd10" id="collapseNotes" aria-labelledby="headingNotes">
                    {{ variables.notes is defined ? variables.notes|nl2br }}
                </div>
            </div>
        </div>
    </div>
</div>