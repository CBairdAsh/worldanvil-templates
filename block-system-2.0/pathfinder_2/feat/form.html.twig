<div class="container-fluid pf2-rpg">
	<div class="pf2-character-sheet col-12">
		<div class="row align-self-start">	
			<div class="col-12 card">
				<div class="card-header pf-red-bg">
					Feat Name: <input value="{{ variables.name is defined ? variables.name }}" required="required" class="form-control" id="name" name="name" placeholder="Name of the action or feat" type="text" />
				</div>
				<div class="card-body txt">
					<div class="row">
						<div class="col-12">
							<h3>Label</h3>
							<textarea class="form-control" id="type" name="type" rows="1" placeholder="eg trait, single action ">{{ variables.type is defined ? variables.type }}</textarea>
							<h3>Tags</h3>
							<input value="{{ variables.tags is defined ? variables.tags }}" class="form-control" id="tags" name="tags" placeholder="eg Pathfinder 2e, General, Skill Feat 1 Healing, Manipulate, Medicine, Core" type="text" />
							<hr>
							<h3>Feat Level / Slot</h3>
							<input value="{{ variables.slot is defined ? variables.slot }}" class="form-control" id="slot" name="slot" placeholder="eg Skill Feat 1, General Feat 1" type="text" /> 
							<h3>Requirements</h3>
							<input value="{{ variables.requirements is defined ? variables.requirements }}" class="form-control" id="requirements" name="requirements" placeholder="eg trained in Medicine" type="text" /> 
							<h3>Trigger</h3>
							<textarea class="form-control" id="trigger" name="trigger" rows="3" placeholder="">{{ variables.trigger is defined ? variables.trigger }}</textarea>
							<h3>Description</h3>
							<textarea class="form-control" id="description" name="description" rows="5" placeholder="">{{ variables.description is defined ? variables.description }}</textarea>
							<h3>Applications</h3>
							<textarea class="form-control" id="specific_applications" name="specific_applications" rows="5" placeholder="">{{ variables.specific_applications is defined ? variables.specific_applications }}</textarea> 
							<h3>Degrees of Performance</h3>
							<textarea class="form-control" id="performance" name="performance" rows="10" placeholder="">{{ variables.performance is defined ? variables.performance }}</textarea>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>