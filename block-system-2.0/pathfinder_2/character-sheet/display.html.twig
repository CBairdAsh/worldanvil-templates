<div class="pf2-rpg">
	<div class="pf2-character-sheet col-12">
		<div {# Page title #} class="row sheet-title">
			<div class="col-12">
				{% if variables.character_name is defined %}
					<h1> {{ variables.character_name}} </h1>
				{% else %}
					<h1>{{ variables.name }}</h1>
				{% endif %}
			</div>
		</div>
		<div {# Character Info Row #} class="row align-self-start">
			<div class="col-12 card">
				<div class="card-header btn btn-pathfinder" type="button" data-toggle="collapse" data-target=".character-info-block" aria-expanded="false" aria-controls="#character-info-block">
					Character Information
				</div>
				<div class="card-body collapse character-info-block" id="character-info-block">
					<!-- base info -->
					<div class="row">
						<div class="col-12 col-lg-4">
							{% if variables.player_name is defined %}
								<dd class="char-info-dd"> {{ variables.player_name}} </dd>
							{% endif %}
							<dt class="char-info-dt">Player Name</dt>
						</div>
						<div class="col-12 col-lg-4">
							{% if variables.class is defined %}
								<dd class="char-info-dd"> {{ variables.class}} </dd>
							{% endif %}
							<dt class="char-info-dt">Character Class</dt>
						</div>
						<div class="col-12 col-lg-4">
							{% if variables.level is defined %}
								<dd class="char-info-dd"> {{ variables.level}} </dd>
							{% endif %}
							<dt class="char-info-dt">Character Level</dt>
						</div>
					</div>
					<!-- experience -->
					<div class="row">
						<div class="col-12 col-lg-8">
							{% if variables.experience_points is defined %}
								<dt>Experience Points</dt>
								<dd> {{ variables.experience_points}} </dd>
							{% endif %}
						</div>
						<div class="col-12 col-lg-4">
							{% if variables.hero_points is defined %}
								<dt>Hero Points</dt>
								<dd> {{ variables.hero_points}} </dd>
							{% endif %}
						</div>
					</div>
					<!-- deity and alignement -->
					<div class="row">
						<div class="col-12 col-md-6 col-lg-3">
							{% if variables.size is defined %}
								<dt>Size</dt>
								<dd> {{ variables.size}} </dd>
							{% endif %}
						</div>
						<div class="col-12 col-md-6 col-lg-3">
							{% if variables.alignment is defined %}
								<dt>Alignment</dt>
								<dd> {{ variables.alignment}} </dd>
							{% endif %}
						</div>
						<div class="col-12 col-md-6 col-lg-3">
							{% if variables.traits is defined %}
								<dt>Traits</dt>
								<dd> {{ variables.traits}} </dd>
							{% endif %}
						</div>
						<div class="col-12 col-md-6 col-lg-3">
							{% if variables.deity is defined %}
								<dt>Deity</dt>
								<dd> {{ variables.deity}} </dd>
							{% endif %}
						</div>
					</div>
					<!-- Ancestry, heritage and background-->
					<div class="row">
						<div class="col-12 col-lg-6">
							{% if variables.ancestry__heritages is defined %}
								<dt>Ancestry & Heritages</dt>
								<dd> {{ variables.ancestry__heritages}} </dd>
							{% endif %}
						</div>
						<div class="col-12 col-lg-6">
							{% if variables.background is defined %}
								<dt>Background</dt>
								<dd> {{ variables.background}} </dd>
							{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
		<div {# First Main Row (Ability, Armor/saves, Health) #} class="row">
			<div class="col-12 col-md-6 col-lg-4">
				<div {# Ability #} class="row align-self-start">
					<div class="col-12 card">
						<div class="card-header btn btn-pathfinder" type="button" data-toggle="collapse" data-target=".ability-block" aria-expanded="false" aria-controls="#ability-block">
							Ability
						</div>
						<div class="card-body collapse ability-block" id="ability-block">
							{% if variables.strength is defined %}
								<dt>Strength</dt>
								<dd> {{ variables.strength}} </dd>
							{% endif %}
							{% if variables.dexterity is defined %}
								<dt>Dexterity</dt>
								<dd> {{ variables.dexterity}} </dd>
							{% endif %}
							{% if variables.constitution is defined %}
								<dt>Constitution</dt>
								<dd> {{ variables.constitution}} </dd>
							{% endif %}
							{% if variables.intelligence is defined %}
								<dt>Intelligence</dt>
								<dd> {{ variables.intelligence}} </dd>
							{% endif %}
							{% if variables.wisdom is defined %}
								<dt>Wisdom</dt>
								<dd> {{ variables.wisdom}} </dd>
							{% endif %}
							{% if variables.charisma is defined %}
								<dt>Charisma</dt>
								<dd> {{ variables.charisma}} </dd>
							{% endif %}
						</div>
					</div>
				</div>
				<div {# Class DC #} class="row align-self-start">
