						<div class="card-header btn btn-pathfinder" type="button" data-toggle="collapse" data-target=".class-dc-block" aria-expanded="false" aria-controls="#class-dc-block">
							Class DC
						</div>
						<div class="card-body collapse class-dc-block" id="class-dc-block">
							{% if variables.class_main_ability is defined %}
								<dt>Class Main Ability</dt>
								<dd> {{ variables.class_main_ability}} </dd>
							{% endif %}
							{% if variables.class_dc_proficiency is defined %}
								<dt>Class DC Proficiency</dt>
								<dd> {{ variables.class_dc_proficiency}} </dd>
							{% endif %}
							{% if variables.class_dc_item_bonus is defined %}
								<dt>Class DC Item Bonus</dt>
								<dd> {{ variables.class_dc_item_bonus}} </dd>
							{% endif %}
						</div>
					</div>
				</div>
			</div>
			<div class="col-12 col-md-6 col-lg-4">
				<div {# Armor Class #} class="row align-self-start">
					<div class="col-12 card">
						<div class="card-header btn btn-pathfinder" type="button" data-toggle="collapse" data-target=".armor-block" aria-expanded="false" aria-controls="#armor-block">
