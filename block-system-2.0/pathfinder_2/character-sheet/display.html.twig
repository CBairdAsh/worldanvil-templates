								<dd> {{ variables.conditions}} </dd>
							{% endif %}
						</div>
					</div>
				</div>
				<div {# Perception #} class="row align-self-start">
					<div class="col-12 card">
						<div class="card-header btn btn-pathfinder" type="button" data-toggle="collapse" data-target=".perception-block" aria-expanded="false" aria-controls="#perception-block">
