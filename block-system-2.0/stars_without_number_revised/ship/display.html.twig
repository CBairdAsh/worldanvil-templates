<div class="container-fluid swn-sheet"> {# ----------------------------------------------------------------------- #}
    <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card my-4 of">
                <div class="card-header head-bar"><em class="fas fa-address-card"></em> SWNR Ship<button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseBackground" aria-expanded="true" aria-controls="collapseBackground"><em class="fas fa-angle-down"></em></button></div>
                <div class="card-body collapse show" id="collapseBackground" aria-labelledby="headingBackground">
                    <table width="100%">
                        <tr><th class="hdr c" width="15%">Name</th><td class="txt l ev">{% if variables.name is defined %}{{ variables.name}}{% endif %}</td>
                            <th class="hdr c" width="15%">type</th><td class="txt l ev">{% if variables.type is defined %}{{ variables.type}}{% endif %}</td></tr>                        
                        <tr><th class="hdr c">hp</th><td class="txt l ev">{% if variables.hp is defined %}{{ variables.hp}}{% endif %}</td>
                            <th class="hdr c">ac</th><td class="txt l ev">{% if variables.ac is defined %}{{ variables.ac}}{% endif %}</td></tr>
                        <tr><th class="hdr c">armor</th><td class="txt l ev">{% if variables.armor is defined %}{{ variables.armor}}{% endif %}</td>
                            <th class="hdr c">speed</th><td class="txt l ev">{% if variables.speed is defined %}{{ variables.speed}}{% endif %}</td></tr>
                        <tr><th class="hdr c">power</th><td class="txt l ev">{% if variables.power is defined %}{{ variables.power}}{% endif %}</td>
                            <th class="hdr c">mass</th><td class="txt l ev">{% if variables.mass is defined %}{{ variables.mass}}{% endif %}</td></tr>
                        <tr><th class="hdr c">crew min max</th><td class="txt l ev">{% if variables.crew_min_max is defined %}{{ variables.crew_min_max}}{% endif %}</td>
                            <th class="hdr c">hull class</th><td class="txt l ev">{% if variables.hull_class is defined %}{{ variables.hull_class}}{% endif %}</td></tr>
                        <tr><th class="hdr c">weapons</th><td class="txt l ev" colspan=3>{% if variables.weapons is defined %}{{ variables.weapons}}{% endif %}</td></tr>
                        <tr><th class="hdr c">defenses</th><td class="txt l ev" colspan=3>{% if variables.defenses is defined %}{{ variables.defenses}}{% endif %}</td></tr>
                        <tr><th class="hdr c">fittings</th><td class="txt l ev" colspan=3>{% if variables.fittings is defined %}{{ variables.fittings}}{% endif %}</td></tr>
                        <tr><th class="hdr c">cost</th><td class="txt l ev" colspan=3>{% if variables.cost is defined %}{{ variables.cost}}{% endif %}</td></tr>
                        <tr><th class="hdr c">description</th><td class="txt l ev" colspan=3>
                            <span class="badge-pill">{% if variables.imageid is defined and variables.imageid > 0 %}[img:{{variables.imageid}}]{% endif %}</span>
                            {% if variables.description is defined %}{{ variables.description}}{% endif %}
                        </td></tr>
                        <tr><th class="hdr c">crew</th><td class="txt l ev">{% if variables.crew is defined %}{{ variables.crew}}{% endif %}</td>
                            <th class="hdr c">crew skill</th><td class="txt l ev">{% if variables.crew_skill is defined %}{{ variables.crew_skill}}{% endif %}</td></tr>
                        <tr><th class="hdr c">cargo</th><td class="txt l ev">{% if variables.cargo is defined %}{{ variables.cargo}}{% endif %}</td>
                            <th class="hdr c">npc cp</th><td class="txt l ev">{% if variables.npc_cp is defined %}{{ variables.npc_cp}}{% endif %}</td></tr>
                        <tr><th class="hdr c">notes</th><td class="txt l ev" colspan=3>{% if variables.notes is defined %}{{ variables.notes}}{% endif %}</td></tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>