<!-- Printing the row of ability table (Calculating mod and tempMod) -->
{% macro printAbilityRow(name,score,tempAdjustement) %}
    {% if score is defined and score != ""%}
    <div class="col-md-3 ability-name-block">
        <div class="ability-label">{{ name|capitalize |slice(0,3) }}</div>
        <div class="ability-name">{{ name|capitalize }}</div>
    </div>
    <div class="col-md-2 ability-value">{{ score }}</div>
    <div class="col-md-2 ability-mod">
        {% set mod = (score - 10)//2 %}
        {% if mod >= 0 %}
            +{{ mod }}
        {% else %}  
            {{ mod }}
        {% endif %}   
    </div>
    <div class="col-md-2 ability-temp-value">
        {% if tempAdjustement is defined and tempAdjustement != ""%}
            {% set adjustedScore = tempAdjustement|number_format %}
        {% else %}  
            {% set adjustedScore = 0 %}
            {% set tempAdjustement = 0 %}
        {% endif %}  
        {% if tempAdjustement >= 0 %}
            +{{ tempAdjustement }}
        {% else %}  
            {{ tempAdjustement }}
        {% endif %}  
    </div>
    <div class="col-md-2 ability-temp-mod">
        {% set adjustedScore = adjustedScore + score|number_format %}
        {% set actualMod = (adjustedScore - 10)//2 %}
        {% if actualMod >= 0 %}
            [roll:1d20+{{ actualMod }}|+{{ actualMod }}]
        {% else %}  
            [roll:1d20{{ actualMod }}|{{ actualMod }}]
        {% endif %}  
    </div>
    {% endif %}   
{% endmacro %}
{% macro printRemainingLife(wounds,total) %}
    {% set remainingLife = total - wounds %}
    {% if remainingLife >= (total * 0.8) %}
        <div class="row">
            <div class="col-md-12 remaining-value-healthy">{{remainingLife}}</div>
        </div>
    {% else %}
        {% if remainingLife >= (total * 0.4) %}
            <div class="row">
                <div class="col-md-12  remaining-value-wounded">{{remainingLife}}</div>
            </div>
        {% else %}
            {% if remainingLife >= (total * 0.1) %}
                <div class="row">
                    <div class="col-md-12 remaining-value-crippled">{{remainingLife}}</div>
                </div>
            {% else %}
                <div class="row">
                    <div class="col-md-12 remaining-value-critical">{{remainingLife}}</div>
                </div>
            {% endif %}   
        {% endif %}   
    {% endif %}   
{% endmacro %}
{% macro printSkillRow(name, attrib, attrib_mod, ranks, misc_mod) %}
        <div class="col-md-6 skill-label">{{ name }}</div>
    {% set total_score = ranks|number_format %}        
    {% set total_score = total_score + attrib_mod|number_format %}
    {% set total_score = total_score + misc_mod|number_format %}
        <div class="col-md-1 skill-total">
            {% if total_score >= 0 %}
                [roll:1d20+{{ total_score }}|+{{ total_score }}]
            {% else %}  
                [roll:1d20{{ total_score }}|{{ total_score }}]
            {% endif %}  
        </div>
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-3 attrib-label">{{ attrib }}</div>
            {% if attrib_mod >= 0 %}
                <div class="col-md-3 attrib-mod-value">+{{ attrib_mod }}</div>
            {% else %}  
                <div class="col-md-3 attrib-mod-value">{{ attrib_mod }}</div>
            {% endif %} 
                <div class="col-md-3 rank-value">{{ ranks }}</div>
            {% if misc_mod >= 0 %}
                <div class="col-md-3 attrib-mod-value">+{{ misc_mod }}</div>
            {% else %}  
                <div class="col-md-3 attrib-mod-value">{{ misc_mod }}</div>
            {% endif %} 
            </div>
        </div>
{% endmacro %}
